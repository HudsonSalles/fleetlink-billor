# Firebase Configuration
# Get these values from Firebase Console -> Project Settings -> General Tab -> Your apps section
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your_project_id_here
REACT_APP_FIREBASE_STORAGE_BUCKET=your_project_id.firebasestorage.app
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id_here
REACT_APP_FIREBASE_APP_ID=your_app_id_here

# Mapbox Configuration
# Get your access token from https://account.mapbox.com/access-tokens/
# Use a PUBLIC Mapbox token (must start with "pk.").
# For local development, add http://localhost:3000 to the token's Allowed URLs
REACT_APP_MAPBOX_ACCESS_TOKEN=pk.your_mapbox_public_token_here

# Development Configuration
# Set to true to use Firebase emulators (optional - requires Firebase CLI setup)
REACT_APP_USE_EMULATOR=false
NODE_ENV=development